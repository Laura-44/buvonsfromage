<div id="red-navbar">
  <%= render "shared/navbar" %>
</div>
<div id="index-pairings">
  <h1 class="index-title">Vos matchs</h1>
  <div class="title-line">
    <div class="title-dot"></div>
  </div>

  <div class="matchs-container" >
    <% @pairings.each do |pairing| %>
    <div class="matchs-images">
      <div class="matchs_fleche">
        <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" viewBox="0 0 45 45" fill="none">
        <circle cx="22.5" cy="22.5" r="22.5" transform="rotate(-90 22.5 22.5)" fill="white"/>
        <path d="M26.7437 24.0151L20.103 30.6558C19.644 31.1147 18.9019 31.1147 18.4478 30.6558L17.3442 29.5522C16.8853 29.0933 16.8853 28.3511 17.3442 27.897L22.0513 23.1899L17.3442 18.4829C16.8853 18.0239 16.8853 17.2817 17.3442 16.8276L18.4478 15.7241C18.9067 15.2651 19.6489 15.2651 20.103 15.7241L26.7437 22.3647C27.2026 22.814 27.2026 23.5562 26.7437 24.0151Z" fill="#EA4335"/>
        </svg>
      </div>
      <%= cl_image_tag pairing.food.photo.key, height: 200, width: 300, crop: :fill, class: "img-fluid" %>
      <%= cl_image_tag pairing.drink.photo.key, height: 200, width: 300, crop: :fill, class: "img-fluid" %>
    </div>
    <div class="red-line"></div>
    <% end %>
  </div>
</div>
